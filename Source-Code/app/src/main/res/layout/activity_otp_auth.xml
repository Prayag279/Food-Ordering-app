<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_ground"
    android:gravity="center_horizontal"
    tools:context=".otpAuth">
    <LinearLayout
        android:padding="@dimen/xxsmall"
        android:layout_gravity="center"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:padding="@dimen/small"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:background="@color/orange"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/paymnets_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:paddingTop="@dimen/xsmall"
                android:onClick="go_back"
                android:paddingBottom="@dimen/xsmall"
                android:paddingLeft="@dimen/xsmall"
                android:paddingRight="@dimen/xsmall"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <TextView
                android:id="@+id/order_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:paddingTop="@dimen/xsmall"
                android:paddingBottom="@dimen/xsmall"
                android:paddingLeft="@dimen/large1"
                android:paddingRight="@dimen/large1"
                android:text="Verify Number"/>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/verifynumber_nobg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ph_num"
        android:hint="Enter Number"
        android:textColorHint="@color/white"
        android:layout_marginBottom="6dp"
        android:background="#30ffffff"
        android:padding="19dp"
        android:layout_margin="10dp"
        android:gravity="top|start"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/otp_code"
        android:textColorHint="@color/white"
        android:layout_marginBottom="6dp"
        android:background="#30ffffff"
        android:padding="19dp"
        android:layout_margin="10dp"
        android:hint="Enter OTP"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:gravity="top|start"
        android:drawablePadding="20dp"
        />
    <Button
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_otp"
        android:textColor="@color/white"
        android:text="Verify Number"
        android:background="@drawable/round_corners"
        android:onClick="sendOTP" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/check_otp"
        android:textColor="@color/white"
        android:background="@drawable/round_corners"
        android:text="OK"
        android:onClick="checkOTP"

        />




</LinearLayout>